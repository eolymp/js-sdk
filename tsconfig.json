{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "es6",
    "outDir": "dist",
    "module": "commonjs",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "exclude": ["node_modules", "dist"]
}
